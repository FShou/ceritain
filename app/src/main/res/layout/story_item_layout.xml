<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp"
    android:backgroundTint="@color/grey"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/profile_picture"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/userName"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/plus_jakarta_sans_semi_bold"
            android:text="@string/username"
            android:textSize="16sp"
            card_view:layout_constraintStart_toEndOf="@id/profilePicture"
            card_view:layout_constraintTop_toTopOf="@id/profilePicture" />

        <TextView
            android:id="@+id/postedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans"
            android:text="Posted at"
            android:textColor="#9F9F9F"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/profilePicture"
            card_view:layout_constraintStart_toStartOf="@+id/userName"
            card_view:layout_constraintTop_toBottomOf="@+id/userName" />

        <Button
            android:id="@+id/btnShare"
            style="@style/Widget.App.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-3dp"
            card_view:icon="@drawable/share"
            card_view:layout_constraintBottom_toBottomOf="@+id/profilePicture"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/profilePicture" />

        <ImageView
            android:id="@+id/storyPicture"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/profilePicture"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/description"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/plus_jakarta_sans"
            android:maxLines="3"
            android:text="@string/lorem"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/storyPicture" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>